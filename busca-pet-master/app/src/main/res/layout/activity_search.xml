<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">

    <!--FOOTER-->
    <include layout="@layout/activity_bottom_menu"/>
    <!--END-FOOTER-->

    <!--BODY-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RaÃ§a"
                android:layout_marginLeft="23dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"/>
            <Spinner
                android:id="@+id/spinner_raca"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:background="@drawable/input_radius"
                android:layout_gravity="center">
            </Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Porte"
                android:layout_marginLeft="23dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"/>
            <Spinner
                android:id="@+id/spinner_porte"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:background="@drawable/input_radius"
                android:layout_gravity="center">
            </Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cor"
                android:layout_marginLeft="23dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"/>
            <Spinner
                android:id="@+id/spinner_cor"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:background="@drawable/input_radius"
                android:layout_gravity="center">
            </Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado"
                android:layout_marginLeft="23dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"/>
            <Spinner
                android:id="@+id/spinner_estado"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:background="@drawable/input_radius"
                android:layout_gravity="center">
            </Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cidade"
                android:layout_marginLeft="23dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"/>
            <Spinner
                android:id="@+id/spinner_cidade"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:background="@drawable/input_radius"
                android:layout_gravity="center">
            </Spinner>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="30dp">

                    <Button
                        android:id="@+id/filter-search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_radius"
                        android:text="BUSCAR"
                        android:textColor="#fff"
                        android:layout_marginRight="5dp"/>

                    <Button
                        android:id="@+id/filter-cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="CANCELAR"
                        android:background="@drawable/butto_cancel_radius"
                        android:textColor="#5882FA" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    <!--END-BODY-->
</RelativeLayout>